# Server Configuration
NODE_ENV=development
PORT=3000

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ulasis
DB_USER=root
DB_PASS=your_database_password
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true
DB_TIMEZONE=+00:00
DB_CHARSET=utf8mb4
DB_COLLATE=utf8mb4_unicode_ci

# Database Connection Pool
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=ulasis-api
JWT_AUDIENCE=ulasis-client

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production-min-32-chars

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@ulasis.com

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_STRICT=false

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_DESTINATION=uploads/

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14