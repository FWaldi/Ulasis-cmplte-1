{
  "name": "ulasis-backend",
  "version": "1.0.0",
  "description": "Backend API for Ulasis Review Analytics System",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "cross-env NODE_ENV=test REDIS_ENABLED=false jest",
    "test:watch": "cross-env NODE_ENV=test REDIS_ENABLED=false jest --watch",
    "test:simple": "cross-env NODE_ENV=test REDIS_ENABLED=false jest --passWithNoTests --verbose=false --silent=false --no-coverage",
    "test:summary": "cross-env NODE_ENV=test REDIS_ENABLED=false jest --passWithNoTests | findstr \"Test Suites:\\|Tests:\\|PASS\\|FAIL\""
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dompurify": "^3.3.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "fs-extra": "^11.3.2",
    "helmet": "^7.0.0",
    "ioredis": "^5.8.2",
    "joi": "^18.0.1",
    "jsdom": "^27.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.0",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.7",
    "qrcode": "^1.5.3",
    "rate-limit-redis": "^4.2.3",
    "redis": "^4.6.10",
    "sequelize": "^6.32.1",
    "sharp": "^0.32.6",
    "speakeasy": "^2.0.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "analytics",
    "reviews",
    "indonesia",
    "sentiment-analysis"
  ],
  "author": "Ulasis Team",
  "license": "MIT",
  "jest": {
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/src/config/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!dompurify)/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "verbose": false,
    "silent": false,
    "reporters": [
      [
        "default",
        {
          "summaryThreshold": 10,
          "summaryStyle": "both"
        }
      ]
    ],
    "testTimeout": 30000,
    "maxWorkers": 1,
    "forceExit": true,
    "detectOpenHandles": false
  }
}
