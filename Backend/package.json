{
  "name": "ulasis-backend",
  "version": "1.0.0",
  "description": "Backend API for Ulasis questionnaire and analytics platform",
  "main": "src/app.js",
  "scripts": {
    "start": "node --max-old-space-size=1024 src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "seed": "sequelize-cli db:seed:all",
    "db:reset": "sequelize-cli db:migrate:undo:all && sequelize-cli db:migrate && sequelize-cli db:seed:all",
    "backup": "node scripts/backup-database.js backup",
    "backup:list": "node scripts/backup-database.js list",
    "restore": "node scripts/restore-database.js",
    "restore:list": "node scripts/restore-database.js list",
    "backup:verify": "node scripts/verify-backup.js verify",
    "backup:test-restore": "node scripts/verify-backup.js test-restore",
    "backup:verify-all": "node scripts/verify-backup.js verify-all",
    "migration:test": "node scripts/test-migrations.js test-all",
    "load-test": "node tests/load/batch-processing-load-test.js",
    "load-test:light": "node tests/load/batch-processing-load-test.js light",
    "load-test:medium": "node tests/load/batch-processing-load-test.js medium",
    "load-test:heavy": "node tests/load/batch-processing-load-test.js heavy",
    "load-test:stress": "node tests/load/batch-processing-load-test.js stress",
    "load-test:all": "node tests/load/batch-processing-load-test.js all",
    "security:test": "node tests/security/run-security-tests.js",
    "security:test:check": "node tests/security/run-security-tests.js --check-zap",
    "security:test:staging": "node tests/security/run-security-tests.js --target http://staging.ulasis.com",
    "security:test:dev": "node tests/security/run-security-tests.js --max-high 1 --max-medium 10"
  },
  "keywords": [
    "nodejs",
    "express",
    "mysql",
    "sequelize",
    "questionnaire",
    "analytics",
    "api"
  ],
  "author": "Ulasis Development Team",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.3.0",
    "helmet": "^7.2.0",
    "ioredis": "^5.8.2",
    "isomorphic-dompurify": "^2.30.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.2.3",
    "sequelize": "^6.35.2",
    "sharp": "^0.34.4",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "axios": "^1.6.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "sequelize-cli": "^6.6.2",
    "sequelize-mock": "^0.10.2",
    "sqlite3": "^5.1.6",
    "supertest": "^6.3.3",
    "wtfnode": "^0.10.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/database.js",
      "!src/migrations/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(isomorphic-dompurify)/)"
    ],
    "moduleNameMapper": {
      "^isomorphic-dompurify$": "<rootDir>/tests/mocks/dompurify.js"
    },
    "maxWorkers": 1,
    "testTimeout": 120000,
    "forceExit": true,
    "detectOpenHandles": false,
    "verbose": false,
    "bail": false
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}
